<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/rekomendasiSekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:id="@+id/check"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/sekolah"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:text="Rekomendasi Sekolah"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/deskripsiLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:text="@string/rekomendasi_sekolah" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Mulai dari" />
                <TextView
                    android:id="@+id/hargaLayanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Rp 300.000,-" />
                <Button
                    android:id="@+id/bt_detail1"
                    android:layout_margin="10dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/gradStop"
                    android:background="@drawable/btn_bg"
                    android:text="Detail"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>