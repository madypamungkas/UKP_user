<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.EditActivity.UploadFoto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/gradStop">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_arrow_back_black_32dp"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@string/font_medium"
            android:paddingLeft="6dp"
            android:text="Ubah Foto Profi"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:id="@+id/view2"
        android:shape="ring"
        android:background="#ffffff"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/uploadFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/menu_icon_user"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"

        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/bt_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_bgin"
            android:paddingHorizontal="30dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="50dp"
            android:text="Pilih Foto"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:enabled="false"
            android:id="@+id/bt_uploadFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bgin"
            android:paddingHorizontal="30dp"
            android:paddingVertical="8dp"
            android:text="Unggah Foto"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>