<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="350dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/gradStop">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@string/font_medium"
        android:text="Isian Biodata"
        android:textAlignment="center"
        android:id="@+id/dialog_namaLayanan"
        android:textColor="@color/white"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_below="@+id/daftarKonsul_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_medium"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:id="@+id/dialog_hargaLayanan"
            android:layout_gravity="center"
            android:text="Selamat Datang"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_medium"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:id="@+id/dialog_deskripsiLayanan"
            android:text="Biodata Pribadi Anda Masih Kosong, Segera Lakukan Pengisian Biodata"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">


        <Button
            android:id="@+id/isiBiodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bgin"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Isi Biodata"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>