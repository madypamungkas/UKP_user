<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.DetailActivity.DetailLayanan">


    <android.support.v7.widget.CardView
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardBackgroundColor="@color/gradStop">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/menu_icon_user"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/namaLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Layanan"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center"/>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/deskripsiLayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="@string/rekomendasi_sekolah" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Mulai dari" />
                    <TextView
                        android:id="@+id/hargaLayanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Rp 300.000,-" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/tutup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg4"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Tutup"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>