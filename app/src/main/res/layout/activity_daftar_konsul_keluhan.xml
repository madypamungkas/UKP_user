<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DaftarKonsultasi.DaftarKonsul_keluhan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/gradStop">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_arrow_back_black_32dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@string/font_medium"
                android:paddingLeft="6dp"
                android:text="Daftar Konsultasi"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f2f2f2"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:id="@+id/head_pilihLayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:alpha="0.6"
                    android:fontFamily="@string/font_medium"
                    android:text="Pilih Psikolog"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1.2"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                android:layout_margin="2dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:fontFamily="@string/font_medium"
                    android:text="Isi Keluhan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:fontFamily="@string/font_medium"
                    android:text="Pilih Jadwal"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/head_konsulSaya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@string/font_medium"
            android:text="Isikan Keluhan Anda"
            android:textAlignment="center"
            android:textColor="@color/gradStop"
            android:textSize="25sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluhan Anda"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>
       <EditText
            android:id="@+id/keluhan"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minLines="8"
           android:gravity="top"
           android:inputType="textCapSentences|textMultiLine"
           android:background="@color/white"
           android:layout_margin="20dp"
           android:maxLines="12"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_keluhan"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:paddingHorizontal="15dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradStart"
                android:background="@drawable/btn_bg"
                android:text="Tambahkan Keluhan"
                />

        </LinearLayout>

</LinearLayout>

