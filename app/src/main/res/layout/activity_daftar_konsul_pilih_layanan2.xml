<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gradStop"
    tools:context=".Activities.DaftarKonsultasi.DaftarKonsul_pilihLayanan2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/gradStop">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_arrow_back_black_32dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@string/font_medium"
                android:paddingLeft="6dp"
                android:text="Daftar Konsultasi"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f2f2f2"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <android.support.v7.widget.CardView
                android:id="@+id/head_biodataklien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:fontFamily="@string/font_medium"
                    android:text="Biodata Klien"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1.2"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                android:layout_margin="2dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:fontFamily="@string/font_medium"
                    android:text="Pilih Layanan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                app:cardElevation="1dp"
                app:cardMaxElevation="2dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:alpha="0.6"
                    android:layout_gravity="center"
                    android:fontFamily="@string/font_medium"
                    android:text="Masukkan Keluhan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="5dp"
            app:cardBackgroundColor="#f2f2f2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Layanan Konsultasi"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gradStop"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:visibility="gone"
                    app:cardMaxElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Klien Yang Didaftarkan"
                        android:textColor="@color/gradStop"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pilihanLayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="Rekomendasi Sekolah"
                        android:visibility="invisible"
                        android:textColor="@color/gradStop"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
                </android.support.v7.widget.CardView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewPilihLayanan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></android.support.v7.widget.RecyclerView>

                </ScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>