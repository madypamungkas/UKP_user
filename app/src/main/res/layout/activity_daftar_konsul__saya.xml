<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.DaftarKonsultasi.DaftarKonsul_Saya">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/gradStop">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_arrow_back_black_32dp"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@string/font_medium"
            android:paddingLeft="6dp"
            android:text="Daftar Konsultasi"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="0.7"
            android:alpha="0.6"
            android:visibility="invisible"
            android:fontFamily="@string/font_medium"
            android:text="3 Pilih Jadwal"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_weight="1.2"
            app:cardElevation="1dp"
            app:cardMaxElevation="2dp"
            android:layout_margin="2dp"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:fontFamily="@string/font_medium"
            android:text="Biodata Klien"
            android:textColor="@color/black"
            android:textSize="14sp" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_weight="1"
            app:cardElevation="1dp"
            app:cardMaxElevation="2dp"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:alpha="0.6"
            android:layout_gravity="center"
            android:fontFamily="@string/font_medium"
            android:text="Pilih Layanan"
            android:textColor="@color/black"
            android:textSize="14sp" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/main_konsulSaya"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="5dp"
                app:cardBackgroundColor="@color/gradStop">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/head_konsulSaya"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@string/font_medium"
                        android:text="Biodata Diri Anda"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/head_konsulSaya"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginVertical="10dp"
                           android:layout_gravity="center"
                            android:id="@+id/view2"
                            android:shape="ring"
                            android:background="#ffffff"
                            app:cardCornerRadius="20dp"
                            android:layout_centerHorizontal="true">
                            <ImageView
                                android:id="@+id/avatarDaftarsaya"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/menu_icon_user"/>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:id="@+id/lay_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Nama                   :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" Muhamad Ady Pamungkas"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/lay_nik"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="NIK                        :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bioNik"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@string/font_medium"
                                android:text=" 1234567890"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:id="@+id/lay_jk"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Jenis Kelamin     :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioJk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" Laki-laki"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:id="@+id/lay_ttl"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Tanggal Lahir      :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioTTL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" 29 Februari 1998"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/lay_anak"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_margin="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_medium"
                                    android:text="Anak Ke-             :"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                                <TextView
                                    android:id="@+id/bioAnakke"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_medium"
                                    android:text=" 3"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="8dp"
                                >

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_medium"
                                    android:text="Dari                      :"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                                <TextView
                                    android:id="@+id/bioJumlahsaudara"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_medium"
                                    android:text=" 3"
                                    android:layout_gravity="left"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    />
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:fontFamily="@string/font_medium"
                                    android:text="Bersaudara"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/lay_pendidikan"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Pendidikan           :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bioPendidikan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" \n Sarjana"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/lay_alamat"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Alamat                  : "
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioAlamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Jalan \nYos Sudarso\nNomor 53\nKabupaten\nMagelang\nProvinsi Jawa Tengah\nIndonesia"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:id="@+id/lay_nohp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Nomor Hp             :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bioNohp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" 3"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_medium"
                            android:text="Lihat Detail"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_medium"
                            android:text="Tutup"
                            android:visibility="gone"
                            android:layout_margin="8dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/main_konsulSaya"
                            android:orientation="vertical"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="70dp"
                            android:paddingVertical="10dp">

                            <Button
                                android:id="@+id/bt_editBiodata"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="5dp"
                                android:background="@drawable/btn_bg"
                                android:paddingBottom="5dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5dp"
                                android:text="Ubah Biodata"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                            <Button
                                android:id="@+id/bt_daftar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="5dp"
                                android:background="@drawable/btn_bgin"
                                android:paddingBottom="5dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5dp"
                                android:text="Daftar Sekarang"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>

</LinearLayout>