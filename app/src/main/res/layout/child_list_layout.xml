<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/rekomendasiSekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/namaChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:text="Nama Klien"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/jkChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:text="Jenis Kelamin" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Hubungan " />

                <TextView
                    android:id="@+id/hubunganChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:text="Anak"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
            <Button
                android:id="@+id/pilih"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradStop"
                android:background="@drawable/btn_bg"
                android:text="Detail" />

            <Button
                android:id="@+id/bt_daftar"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradStart"
                android:background="@drawable/btn_bg"
                android:text="Daftar" />

            <Button
                android:id="@+id/bt_lanjutDaftar"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradStart"
                android:background="@drawable/btn_bg"
                android:visibility="gone"
                android:text="Daftarkan" />

            <Button
                android:id="@+id/bt_batal"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:visibility="gone"
                android:backgroundTint="@color/red"
                android:background="@drawable/btn_bg"
                android:text="Batal" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>